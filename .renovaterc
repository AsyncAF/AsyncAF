{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(ci)"
  ],
  "bumpVersion": "patch",
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "packageNames": ["browserslist", "caniuse-lite"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "prCreation": "not-pending",
      "rebaseStalePrs": true,
      "major": {
        "automerge": false
      },
      "schedule": ["after 12pm on friday"]
    }
  ],
  "rangeStrategy": "bump",
  "timezone": "America/Los_Angeles"
}
